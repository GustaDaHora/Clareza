{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "main-capability",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "fs:default",
    {
      "identifier": "fs:scope", 
      "allow": [
        { "path": "$HOME/Documents/Clareza/**/*" },
        { "path": "$APPDATA/Clareza/**/*" }
      ]
    },
    {
      "identifier": "fs:allow-write", 
      "allow": [
        { "path": "$HOME/Documents/Clareza/**" }
      ]
    }
  ]
}
